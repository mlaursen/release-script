{
  "name": "@mlaursen/release-script",
  "type": "module",
  "version": "0.0.1",
  "description": "The release script I normally use for packages I publish to npm",
  "repository": "https://github.com/mlaursen/release-script.git",
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "build": "tsc -p tsconfig.build.json",
    "release": "tsx index.ts"
  },
  "files": [
    "dist/"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "bugs": {
    "url": "https://github.com/mlaursen/release-script/issues"
  },
  "keywords": [
    "release",
    "script",
    "npm"
  ],
  "dependencies": {
    "@changesets/cli": "^2.29.5",
    "@inquirer/confirm": "^5.1.14",
    "@inquirer/input": "^4.2.1",
    "@inquirer/rawlist": "^4.1.5",
    "@octokit/core": "^7.0.3",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,md,yml,yaml,json}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.17.1",
    "pnpm": "10.13.1"
  }
}
